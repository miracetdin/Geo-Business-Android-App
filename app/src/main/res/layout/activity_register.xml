<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerbackground"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/register_tw_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="REGISTER"
        android:textColor="#CAC6D1"
        android:textSize="50dp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/register_tw_register"
        android:src="@drawable/baseline_register_circle_24" />


    <androidx.cardview.widget.CardView
        android:id="@+id/register_et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_tw_register"
        android:layout_margin="15dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/cardcolor"
        app:cardElevation="2dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/cardcolor"
            android:drawableLeft="@drawable/baseline_account_box_24"
            android:hint=" Username"
            android:textColor="@color/white"
            android:textColorHint="#F4F4F4" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/register_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_et_username"
        android:layout_margin="15dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/cardcolor"
        app:cardElevation="2dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_et_username"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/outline_person_black_24dp"
            android:hint=" Name"
            android:textColorHint="#F4F4F4"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/register_et_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_et_name"
        android:layout_margin="15dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/cardcolor"
        app:cardElevation="2dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_et_name"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/outline_person_black_24dp"
            android:hint=" Surname"
            android:textColorHint="#F4F4F4"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/register_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_et_surname"
        android:layout_margin="15dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/cardcolor"
        app:cardElevation="2dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/lock_black_24dp"
            android:hint=" Password"
            android:textColorHint="#2B2C30"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/register_et_repassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_et_password"
        android:layout_margin="15dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/cardcolor"
        app:cardElevation="2dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_et_password"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/lock_black_24dp"
            android:hint=" Re-enter password"
            android:textColorHint="#2B2C30"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_bt_register"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/cardcolor"
        app:cardElevation="2dp">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/cardcolor"
        app:cardElevation="2dp">

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/register_bt_register"
        style="@style/Widget.Material3.Button.TextButton.Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_et_repassword"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:padding="20dp"
        android:singleLine="true"
        android:text="REGISTER"
        android:textColor="#2B2C30" />

    <Button
        style="@style/Widget.Material3.Button.TextButton.Dialog"
        android:id="@+id/register_bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_bt_register"
        android:layout_marginStart="150dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:text="  CANCEL  "
        android:textColor="#2B2C30"/>

</RelativeLayout>